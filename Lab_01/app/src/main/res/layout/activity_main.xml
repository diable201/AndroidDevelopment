<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"

            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1.4"
                android:text="RAD"
                android:gravity="left|top"
                android:paddingTop="15dp"
                android:paddingLeft="15dp"
                android:textSize="18dp"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="16Ã—(0,5)"
                android:textColor="@color/black"
                android:gravity="center|bottom"
                android:paddingBottom="0dp"
                android:textSize="80dp"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="8"
                android:gravity="bottom|right"
                android:paddingBottom="60dp"
                android:paddingRight="35dp"
                android:textSize="55dp"
                android:layout_height="match_parent" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:baselineAligned="false">

            <LinearLayout
                android:id="@+id/main_panel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:text="@string/Seven"
                        android:textColor="@color/black"
                        android:textSize="@dimen/calcButtonTextSize" />
                    <!---->
                    <Button
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:text="@string/Eight"
                        android:textColor="@color/black"
                        android:textSize="@dimen/calcButtonTextSize" />
                    <!---->
                    <Button
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:text="@string/Nine"
                        android:textColor="@color/black"
                        android:textSize="@dimen/calcButtonTextSize" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:text="@string/Four"
                        android:textColor="@color/black"
                        android:textSize="@dimen/calcButtonTextSize" />

                    <Button
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:text="@string/Five"
                        android:textColor="@color/black"
                        android:textSize="@dimen/calcButtonTextSize" />

                    <Button
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:text="@string/Six"
                        android:textColor="@color/black"
                        android:textSize="@dimen/calcButtonTextSize" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:text="@string/One"
                        android:textColor="@color/black"
                        android:textSize="@dimen/calcButtonTextSize" />
                    <!---->
                    <Button
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:text="@string/Two"
                        android:textColor="@color/black"
                        android:textSize="@dimen/calcButtonTextSize" />
                    <!---->
                    <Button
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:text="@string/Three"
                        android:textColor="@color/black"
                        android:textSize="@dimen/calcButtonTextSize" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:text="@string/Zero"
                        android:textColor="@color/black"
                        android:textSize="@dimen/calcButtonTextSize" />

                    <Button
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:text="@string/Comma"
                        android:textColor="@color/black"
                        android:textSize="@dimen/calcButtonTextSize" />

                    <Button
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:text="@string/Equal"
                        android:textColor="@color/black"
                        android:textSize="@dimen/calcButtonTextSize">

                    </Button>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/operations_panel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@id/main_panel"
                app:layout_constraintLeft_toRightOf="@+id/main_panel"
                app:layout_constraintTop_toTopOf="@id/main_panel">

                <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:background="@color/white"
                    android:text="@string/Delete"
                    android:textColor="#0091EA"
                    android:textSize="@dimen/calcButtonTextSize" />

                <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:background="@color/white"
                    android:text="@string/Divide"
                    android:textColor="#0091EA"
                    android:textSize="@dimen/calcButtonTextSize" />

                <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:background="@color/white"
                    android:text="@string/Multiply"
                    android:textColor="#0091EA"
                    android:textSize="@dimen/calcButtonTextSize" />

                <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:background="@color/white"
                    android:text="@string/Minus"
                    android:textColor="#0091EA"
                    android:textSize="@dimen/calcButtonTextSize" />

                <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:background="@color/white"
                    android:text="@string/Plus"
                    android:textColor="#0091EA"
                    android:textSize="@dimen/calcButtonTextSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_weight="0.35"
                android:orientation="vertical">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/blue"
                    android:text="@string/More"
                    android:textColor="@color/white"></Button>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
