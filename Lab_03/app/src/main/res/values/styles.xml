<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="main_panel_button" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="operations_panel_button" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/white_blue</item>
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="more_operations_panel_button" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="backgroundTint">@color/white_blue</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>
</resources>